<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.splash.pati.erol.ProfilFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="117dp"
            android:layout_marginStart="117dp"
            android:layout_marginTop="54dp"
            android:src="@drawable/baatmaan"
            app:layout_constraintBottom_toTopOf="@+id/name_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/ic_add_a_photo_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/image"
            app:layout_constraintEnd_toStartOf="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_date"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="328dp"
            android:text="AD,YAŞ"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image" />


        <ImageView
            android:id="@+id/settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="310dp"
            android:layout_marginEnd="156dp"
            android:src="@drawable/ic_settings_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profil_edit"
            app:layout_constraintTop_toBottomOf="@+id/text_settings"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/profil_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="275dp"
            android:layout_marginEnd="84dp"
            android:src="@drawable/ic_pets_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_date"
            app:layout_constraintVertical_bias="0.396" />

        <TextView
            android:id="@+id/text_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="224dp"
            android:layout_marginEnd="267dp"
            android:layout_marginStart="73dp"
            android:text="AYARLAR"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.192"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings"
            app:layout_constraintVertical_bias="0.296" />

        <TextView
            android:id="@+id/text_pets"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginBottom="220dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="84dp"
            android:text="EVCİL HAYVANLARIM"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_settings"
            app:layout_constraintTop_toBottomOf="@+id/profil_edit"
            app:layout_constraintVertical_bias="0.0" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="195dp"
            android:layout_marginTop="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_pets">

        </ListView>

    </android.support.constraint.ConstraintLayout>


</ScrollView>
